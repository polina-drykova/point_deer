<div class="container">
  <!-- <h1>All posts:</h1> -->
  <% @posts.each do |post| %>
    <tr>
      <td>
        <div class="post">
          <%= link_to post.title, post_path(post), class: 'post-title' %>
          <div class="date">
            <%= post.date.strftime("%d %b %Y") %>
          </div>
        </div>
      </td>
    </tr>
  <% end %>
  <div class="back-link">
    <% if session[:admin] then %>
      <%= link_to 'New Post', new_post_path %>
    <% end %>
  </div>
</div>
